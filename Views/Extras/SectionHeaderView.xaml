<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="AppCelmiMaquinas.Views.SectionHeaderView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AppCelmiMaquinas.Views">
    <Border
        Margin="2,2,2,0"
        Padding="5,2"
        x:DataType="views:SectionHeaderView"
        HeightRequest="30"
        StrokeShape="RoundRectangle 40,0,0,40"
        Style="{StaticResource ConfiguracaoHeaderBorderStyleInverse}">
        <StackLayout Orientation="Horizontal">
            <Label
                FontAttributes="Bold"
                FontFamily="FontAwesomeLight"
                FontSize="Small"
                Text="{Binding Icon}"
                TextColor="White"
                VerticalOptions="Center" />
            <Label
                Margin="8,0,0,0"
                FontSize="Small"
                Text="{Binding Text}"
                TextColor="White"
                VerticalOptions="Center" />
        </StackLayout>
    </Border>
</ContentView>
