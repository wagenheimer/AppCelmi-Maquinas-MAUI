<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="AppCelmiPecuaria.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppCelmiPecuaria"
    xmlns:converters="clr-namespace:AppCelmiPecuaria.Converters"
    xmlns:localization="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:SelectedToColorConverter x:Key="SelectedToColorConverter" />
            <converters:SelectedToOpacityConverter x:Key="SelectedToOpacityConverter" />
            <converters:SelectedToOrangeBrushConverter x:Key="SelectedToOrangeBrushConverter" />
            <converters:SelectedToDarkOrangeBrushConverter x:Key="SelectedToDarkOrangeBrushConverter" />
            <converters:SelectedToBrushConverter x:Key="SelectedToBrushConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
